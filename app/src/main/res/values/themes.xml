<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.AttendWisePro" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/success_green</item>
        <item name="colorSecondaryVariant">@color/success_green</item>
        <item name="colorOnSecondary">@color/white</item>
        
        <!-- System bars -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimaryVariant</item>
        
        <!-- Background -->
        <item name="android:windowBackground">@color/background_gray</item>
        
        <!-- Text -->
        <item name="android:textColorPrimary">@color/text_dark</item>
        <item name="android:textColorSecondary">@color/gray</item>
    </style>

    <!-- Cards -->
    <style name="Widget.AttendWisePro.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardElevation">4dp</item>
        <item name="cardCornerRadius">8dp</item>
    </style>

    <!-- Buttons -->
    <style name="Widget.AttendWisePro.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="Widget.AttendWisePro.Button.Primary">
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="Widget.AttendWisePro.Button.Secondary">
        <item name="backgroundTint">@color/success_green</item>
    </style>

    <!-- Progress Bars -->
    <style name="Widget.AttendWisePro.ProgressBar" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="trackColor">@color/colorPrimaryLight</item>
        <item name="indicatorColor">@color/colorPrimary</item>
    </style>
</resources>
